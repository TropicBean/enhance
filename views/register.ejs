<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Demo App</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    

  <div class="app-body">
    <h1>Register</h1>
    <form action="/register"  method="POST">
      <div>
    
        <div class="form-group">
          <input type="email" id="username" name="username" placeholder="Username">
        </div>
    
        <div class="form-group">
          <input type="password" id="password" name="password" placeholder="Password">
        </div>
    
        <button type="submit" >Register</button>
    
      </div>

    
      <a href="/login">Login</a>
    </form>
    <% if( typeof(message) != 'undefined') { %>
      <div class="notification"><%= message %></div>
    <% } %>  
    <div class="visualizer">
      <div phase="1" class="object  visualizer-close"></div>
      <div class="object2  visualizer-close"></div>
      <div class="object3  visualizer-close"></div>
      <div class="object4  visualizer-close"></div>
      <div class="object5  visualizer-close"></div>
      <div class="object6  orbit-close visualizer-close"></div>
      <div class="object7  orbit-close visualizer-close"></div>
      <div class="object8  orbit-close visualizer-close"></div>
      <div class="object9  orbit-close visualizer-close"></div>
      <div class="object10 orbit-close visualizer-close"></div>
      <div class="object11 orbit-close visualizer-close"></div>
      <div class="object12 orbit-close visualizer-close"></div>	
      <div>
    </div>

  </div>


</body>
</html>

